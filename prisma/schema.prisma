generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ActivityType {
  LOGIN
  LOGOUT
  LISTEN_COMPLETE
  QUIZ_SUBMIT
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  company      String?
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  quizAttempts QuizAttempt[]
  listenEvents ListenEvent[]
  activityLogs ActivityLog[]
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  audioSlug String
  score     Int
  total     Int
  passed    Boolean
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([audioSlug])
}

model ListenEvent {
  id          String   @id @default(cuid())
  userId      String
  audioSlug   String
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, audioSlug])
  @@index([audioSlug])
}

model ActivityLog {
  id        String       @id @default(cuid())
  userId    String
  type      ActivityType
  audioSlug String?
  score     Int?
  total     Int?
  passed    Boolean?
  createdAt DateTime     @default(now())
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}
